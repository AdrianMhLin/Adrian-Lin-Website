    $downloadResume.attr('download', newDocName);
  }

  function prepareMailtoWithResume(){
    var $mailtoBtn = $('#mailResumeToSelf'),
        downloadLink = 'http://' + window.location.host + '/pdfs/resume_adrian_lin.pdf',
        website = 'http://adrianlin.com',

        /*mailto components */
        emailAddress = '',
        subject = 'Check out this Adrian Lin guy!',
        body = 'Remember to check out Adrian Lin!' 
                + '%0A'
                + 'Website: ' + website 
                + '%0A'
                + 'Resume: ' + downloadLink,

        finalMailto;

    finalMailto = emailAddress 
                  + '?subject=' + subject
                  + '&body=' + body 
    finalMailto = 'mailto:' + finalMailto;
    $mailtoBtn.attr('href', finalMailto);




  }
</script>


